<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DojonEtWiki.View.Arme.GetArme"
             Title="GetArme">
    <VerticalStackLayout>
        <Label FontSize="Title" Text="{Binding Arme.Nom}" />
        <Label Text="{Binding Arme.BonusJet, StringFormat='Bonus de jet : {0}'}" />
        <Label Text="{Binding Arme.BonusForce, StringFormat='Bonus de force : {0}'}" />
        <Label Text="{Binding Arme.Enchantement.Nom, StringFormat='Enchantement : {0}'}" />
    </VerticalStackLayout>
</ContentPage>