<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DojonEtWiki.View.Armure.GetArmure"
             Title="GetArmure">
    <VerticalStackLayout>
        <Label FontSize="Title" Text="{Binding Armure.Name}" />
        <Label Text="{Binding Armure.Type, StringFormat='Type armure : {0}'}" />
        <Label Text="{Binding Armure.Ac, StringFormat='AC : {0}'}" />
        <Label Text="{Binding Armure.DexBonus, StringFormat='Bonus de dextérité : {0}'}" />
        <Label Text="{Binding Armure.MaxDexMod, StringFormat='Modification maximale de dextérité : {0}'}" />
        <Label Text="{Binding Armure.StealthDisadvantage, StringFormat='Désavantage de furtivité : {0}'}" />
        <Label Text="{Binding Armure.Enchantement.Nom, StringFormat='Enchantement : {0}'}" />
    </VerticalStackLayout>
</ContentPage>