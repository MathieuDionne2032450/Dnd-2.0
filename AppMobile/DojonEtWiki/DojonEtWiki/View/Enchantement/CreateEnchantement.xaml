<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DojonEtWiki.View.Enchantement.CreateEnchantement"
             Title="CreateEnchantement">
    <VerticalStackLayout>
        <Label 
            Text="Créer un enchantement"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Title"/>

        <Entry Placeholder="Entrer le nom :" x:Name="EntreeNom"/>
        <Entry Placeholder="Entrer la description :" x:Name="EntreeDescription"/>
        <Entry Placeholder="Entrer le type :" x:Name="EntreeType"/>
        <Entry Placeholder="Entrer la modification :" x:Name="EntreeModif"/>

        <Button Text="Créer enchantement" Clicked="OnCreateEnchantementClicked"/>
    </VerticalStackLayout>
</ContentPage>