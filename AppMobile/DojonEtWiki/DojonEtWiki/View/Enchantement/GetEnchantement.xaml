<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DojonEtWiki.View.Enchantement.GetEnchantement"
             Title="GetEnchantement">
    <VerticalStackLayout>
        <Label FontSize="Title" Text="{Binding Enchantement.Nom}" />
        <Label Text="{Binding Enchantement.Description, StringFormat='Description : {0}'}" />
        <Label Text="{Binding Enchantement.Type, StringFormat='Type : {0}'}" />
        <Label Text="{Binding Enchantement.Modif, StringFormat='Modificateur : {0}'}" />
    </VerticalStackLayout>
</ContentPage>