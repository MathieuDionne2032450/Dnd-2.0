<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DojonEtWiki.View.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DojonEtWiki.View"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Connexion"
        ContentTemplate="{DataTemplate local:Connexion}"
        Route="Connexion" />
    
    <ShellContent
        Title="WikiList"
        ContentTemplate="{DataTemplate local:WikiList}"
        Route="WikiList"/>

</Shell>