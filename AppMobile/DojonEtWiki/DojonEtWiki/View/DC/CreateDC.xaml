<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DojonEtWiki.View.DC.CreateDC"
             Title="CreateDC">
    <VerticalStackLayout>
        <Label 
            Text="Créer un DC"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Title"/>

        <Entry Placeholder="Entrer le DC :" x:Name="EntreeDC"/>
        <Entry Placeholder="Entrer le modifier :" x:Name="EntreeModifier"/>
        <Entry Placeholder="Entrer le type :" x:Name="EntreeType"/>

        <Button Text="Créer le DC" Clicked="OnCreateDCClicked"/>
    </VerticalStackLayout>
</ContentPage>